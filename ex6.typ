$
  dim Sym_(n)(RR)
  &= dim { A in M_(n)(RR) | A = A^tack.b } \
  &= dim { mat(
      a_(1 1), ..., a_(1 n);
      dots.v, dots.down, dots.v;
      a_(n 1), ..., a_(n n);
    ) in M_(n)(RR) | forall 1 <= i, j <= n ds a_(i j) = a_(j i) } \
  &= dim { mat(
      a_(1 1), ..., a_(1 n);
      dots.v, dots.down, dots.v;
      a_(n 1), ..., a_(n n);
    ) in M_(n)(RR) | forall 1 <= i <= j <= n ds a_(i j) = a_(j i) } \
  &= dim { mat(
      a_(1 1), ..., a_(1 n);
      dots.v, dots.up, dots.v;
      a_(n 1), ..., a_(1 1);
    ) | a_(1 1), ..., a_(1 n), a_(2 1), ..., a_(2 space (n-1)), ......, a_(n n) in RR } \
  &= dim Span {
    mat(
      1, ..., 0;
      dots.v, dots.up, dots.v;
      0, ..., 1
    ), ..., mat(
      0, ..., 1, 0;
      dots.v, dots.up, dots.v, dots.v;
      1, 0, ..., 0;
      0, 0, ..., 0;
    ), mat(
      0, ..., 1;
      dots.v, dots.up, dots.v;
      0, ..., 0;
    ), ..., mat(
      0, ..., 0;
      dots.v, dots.up, dots.v;
      1, ..., 0;
    )
  } \
  &= (n-1) + (n-2) + ... + 1 + n \
  &= 1 + ... + n \
  &= (n(n+1)) / 2 \
